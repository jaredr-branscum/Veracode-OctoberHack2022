{
  "name": "microrpg",
  "version": "0.0.0",
  "description": "Library of reusable components for building RPGs",
  "scripts": {
    "build": "tsc && npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc --watch",
